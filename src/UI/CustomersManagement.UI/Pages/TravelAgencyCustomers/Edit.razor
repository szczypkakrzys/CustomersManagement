@page "/travelagency/customers/edit/{id:int}"

<h3>Edytuj dane klienta</h3>

@if (string.IsNullOrEmpty(Message) == false)
{
    <div class="alert alert-danger">
        @Message
    </div>
}

@if (Model == null || Model.Address == null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="@Model" OnValidSubmit="UpdateCustomer">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <InputText id="FirstName" class="form-control" @bind-Value="@Model.FirstName"></InputText>
                    <ValidationMessage For="@(() => Model.FirstName)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <InputText id="LastName" class="form-control" @bind-Value="@Model.LastName"></InputText>
                    <ValidationMessage For="@(() => Model.LastName)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label">Email Address</label>
                    <InputText id="EmailAddress" class="form-control" @bind-Value="@Model.EmailAddress"></InputText>
                    <ValidationMessage For="@(() => Model.EmailAddress)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Numer telefonu</label>
                    <InputText id="PhoneNumber" class="form-control" @bind-Value="@Model.PhoneNumber"></InputText>
                    <ValidationMessage For="@(() => Model.PhoneNumber)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label">Kraj</label>
                    <InputText id="Country" class="form-control" @bind-Value="@Model.Address.Country"></InputText>
                    <ValidationMessage For="@(() => Model.Address.Country)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="Voivodeship" class="control-label">Województwo</label>
                    <InputText id="Voivodeship" class="form-control" @bind-Value="@Model.Address.Voivodeship"></InputText>
                    <ValidationMessage For="@(() => Model.Address.Voivodeship)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label">Kod pocztowy</label>
                    <InputText id="PostalCode" class="form-control" @bind-Value="@Model.Address.PostalCode"></InputText>
                    <ValidationMessage For="@(() => Model.Address.PostalCode)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">Miasto</label>
                    <InputText id="City" class="form-control" @bind-Value="@Model.Address.City"></InputText>
                    <ValidationMessage For="@(() => Model.Address.City)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="Street" class="control-label">Ulica</label>
                    <InputText id="Street" class="form-control" @bind-Value="@Model.Address.Street"></InputText>
                    <ValidationMessage For="@(() => Model.Address.Street)" ShowValidationMessage="true" />
                </div>
                <div class="form-group">
                    <label asp-for="HouseNumber" class="control-label">Number budynku/mieszkania</label>
                    <InputText id="HouseNumber" class="form-control" @bind-Value="@Model.Address.HouseNumber"></InputText>
                    <ValidationMessage For="@(() => Model.Address.HouseNumber)" ShowValidationMessage="true" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Zatwierdź" class="btn btn-primary" />
                </div>
            </EditForm>
        </div>
    </div>
}